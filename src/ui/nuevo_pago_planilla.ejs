<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="style/style.css" />
<div class="contenedorDashboard">
  <h3>Planilla / Ingresar Nuevo Pago de Planilla</h3>
</div>
<div class="contenedorDashboard">
  <form action="" class="flexRow">
    <div class="flexColumn">
      <div class="flexRow" style="align-items: center">
        <div class="cajaInput">
          <label for="desdeLaFecha">Desde la fecha</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="date"
              name="desdeLaFecha"
              id="desdeLaFecha"
              class="estiloInputLogin"
              tabindex="1"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="hastaLaFecha">Hasta la fecha</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="date"
              name="hastaLaFecha"
              id="hastaLaFecha"
              class="estiloInputLogin"
              tabindex="2"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="nombreEmpleado">Nombre del Empleado</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="nombreEmpleado"
              id="nombreEmpleado"
              class="estiloInputLogin"
              tabindex="3"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="sueldoBase">Sueldo Base</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="sueldoBase"
              id="sueldoBase"
              class="estiloInputLogin"
              tabindex="4"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
      </div>
      <div class="flexRow" style="align-items: center">
        <div class="cajaInput">
          <label for="horasExtra">Horas Extra</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="horasExtra"
              id="horasExtra"
              class="estiloInputLogin"
              tabindex="5"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="bonificaciones">Bonificaciones</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="bonificaciones"
              id="bonificaciones"
              class="estiloInputLogin"
              tabindex="6"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="deducciones">Deducciones</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="deducciones"
              id="deducciones"
              class="estiloInputLogin"
              tabindex="7"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="botonesDashboard">
      <div class="flexColumn space-around">
        <div class="flexColumn">
          <button
            onclick="limpiarTextos();event.preventDefault()"
            tabindex="-1"
            id="btnAceptar"
            class="boton colorAmarillo"
          >
            LIMPIAR
          </button>
        </div>
        <div class="flexColumn">
          <button
            onclick="validar();event.preventDefault()"
            tabindex="8"
            id="btnAceptar"
            class="boton colorSecundario"
          >
            ACEPTAR
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
<div class="contenedorDashboard">
  <table class="estiloTabla">
    <thead>
      <tr>
        <th style="min-width: 160px; max-width: 160px; width: 160px">
          Desde la Fecha
        </th>
        <th style="min-width: 160px; max-width: 160px; width: 160px">
          Hasta la Fecha
        </th>
        <th style="min-width: 260px; max-width: 260px; width: 360px">
          Nombre Empleado
        </th>
        <th style="min-width: 100px; max-width: 100px; width: 160px">
          Sueldo Base
        </th>
        <th style="min-width: 160px; max-width: 160px; width: 160px">
          Horas Extra
        </th>
        <th style="min-width: 160px; max-width: 160px; width: 160px">
          Bonificaciones
        </th>
        <th style="min-width: 160px; max-width: 160px; width: 160px">
          Deducciones
        </th>
        <th style="min-width: 160px; max-width: 160px; width: 160px">
          Total Neto a Pagar
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody id="tablaEntradas" style="max-height: 58vh; height: 58vh"></tbody>
  </table>
</div>
<div>
  <div class="flexRow" style="justify-content: space-evenly">
    <div class="flexRow">
      <button
        style="margin-right: 10px"
        tabindex="-1"
        id="btnLimpiar"
        class="boton colorAmarillo"
        onclick="limpiarTextos()"
      >
        CANCELAR
      </button>
      <button
        onclick="nuevoProducto();event.preventDefault()"
        tabindex="-1"
        id="btnAceptar"
        class="boton colorSecundario"
      >
        ACEPTAR Y GUARDAR
      </button>
    </div>
  </div>
</div>
<script src="scripts/nuevo_pago_planilla.js"></script>
<%- include('./partials/footer.ejs') %>
