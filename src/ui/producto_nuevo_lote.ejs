<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="style/style.css" />
<div class="contenedorDashboard">
  <h3>Productos / Ingresar Nuevo Lote</h3>
</div>
<div style="overflow-x: inherit" class="contenedorDashboard">
  <form action="" class="flexRow">
    <div class="flexColumn">
      <div class="flexRow" style="align-items: center">
        <div class="cajaInput autocomplete">
          <label for="idProducto">ID Producto</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="idProducto"
              id="idProducto"
              class="estiloInputLogin"
              tabindex="1"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
        <div class="cajaInput autocomplete">
          <label for="productoNombre">Nombre del Producto</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="productoNombre"
              id="productoNombre"
              class="estiloInputLogin"
              tabindex="2"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="productoDescripcion">Descripcion del Producto</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="productoDescripcion"
              id="productoDescripcion"
              class="estiloInputLogin"
              tabindex="-1"
              disabled
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="lotePresentacion">Presentacion</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <select
              class="estiloInputLogin"
              name="lotePresentacion"
              id="lotePresentacion"
              style="width: 15vh"
              tabindex="4"
              disabled
            >
              <option value="-1">Seleccione</option>
              <option value="Caja">Caja</option>
              <option value="Botella">Botella</option>
              <option value="Saco">Saco</option>
              <option value="Libra">Libra</option>
              <option value="Otro">Otro</option>
            </select>
          </div>
        </div>
      </div>
      <div class="flexRow" style="align-items: center">
        <div class="cajaInput">
          <label for="loteValorUnitarioCompra">Valor Unitario de Compra</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="loteValorUnitarioCompra"
              id="loteValorUnitarioCompra"
              class="estiloInputLogin"
              tabindex="3"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="loteValorUnitarioVenta">Valor Unitario de Venta</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="loteValorUnitarioVenta"
              id="loteValorUnitarioVenta"
              class="estiloInputLogin"
              tabindex="4"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="productoFechaVencimiento">Fecha de Vencimiento</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="date"
              name="productoFechaVencimiento"
              id="productoFechaVencimiento"
              class="estiloInputLogin"
              tabindex="5"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="loteCantidad">Cantidad a Ingresar</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="loteCantidad"
              id="loteCantidad"
              class="estiloInputLogin"
              tabindex="6"
              onkeyup="soloNumeros(this)"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="botonesDashboard">
      <div class="flexColumn space-around">
        <div class="flexColumn">
          <button
            tabindex="-1"
            id="btnAceptar"
            class="boton colorAmarillo"
            onclick="limpiarTextos();event.preventDefault()"
          >
            LIMPIAR
          </button>
        </div>
        <div class="flexColumn">
          <button
            onclick="agregarFilasProductos();event.preventDefault()"
            tabindex="7"
            id="btnAceptar"
            class="boton colorSecundario"
          >
            ACEPTAR
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
<div class="contenedorDashboard">
  <table class="estiloTabla">
    <thead>
      <tr>
        <th style="min-width: 20px; max-width: 20px; width: 20px">NÂº</th>
        <th style="min-width: 150px; max-width: 150px; width: 150px">
          ID Producto
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Producto
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Descripcion
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Presentacion
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Fecha Vencimiento
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          V.Unit Compra
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          V.Unit Venta
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Cantidad
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody id="tablaEntradas" style="max-height: 58vh; height: 58vh"></tbody>
  </table>
</div>
<div>
  <div class="flexRow" style="justify-content: space-evenly">
    <div class="flexRow">
      <button
        style="margin-right: 10px"
        tabindex="-1"
        id="btnLimpiar"
        class="boton colorAmarillo"
        onclick="limpiarTextos()"
      >
        CANCELAR
      </button>
      <button
        onclick="nuevoLote();event.preventDefault()"
        tabindex="-1"
        id="btnAceptar"
        class="boton colorSecundario"
      >
        ACEPTAR Y GUARDAR
      </button>
    </div>
  </div>
</div>
<script src="scripts/producto_nuevo_lote.js"></script>
<%- include('./partials/footer.ejs') %>
