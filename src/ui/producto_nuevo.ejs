<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="style/style.css" />
<div class="contenedorDashboard">
  <h3>Productos / Ingresar Nuevos Productos</h3>
</div>
<div class="contenedorDashboard">
  <div class="flexRow">
    <div class="flexColumn">
      <div class="flexRow" style="align-items: center">
        <div class="cajaInput">
          <label for="productoNombre">Nombre del Producto</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="productoNombre"
              id="productoNombre"
              class="estiloInputLogin"
              tabindex="1"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="productoDescripcion">Descripcion del Producto</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="text"
              name="productoDescripcion"
              id="productoDescripcion"
              class="estiloInputLogin"
              tabindex="2"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="productoProveedor">Proveedor</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <select
              class="estiloInputLogin"
              name="productoProveedor"
              id="productoProveedor"
              style="width: 15vh"
              tabindex="3"
            ></select>
          </div>
        </div>
        <div class="cajaInput">
          <label for="productoColor">Color</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <select
              class="estiloInputLogin"
              name="productoColor"
              id="productoColor"
              style="width: 15vh"
              tabindex="4"
            >
              <option value="0">Seleccione</option>
              <option value="Amarillo">Amarillo</option>
              <option value="Azul">Azul</option>
              <option value="Rosa">Rosa</option>
              <option value="Beige">Beige</option>
              <option value="Verde">Verde</option>
            </select>
          </div>
        </div>
        <div class="cajaInput">
          <label for="productoCategoria">Categoria</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <select
              class="estiloInputLogin"
              name="productoCategoria"
              id="productoCategoria"
              style="width: 15vh"
              tabindex="5"
            >
              <option value="">Seleccione</option>
              <option value="">Efectivo</option>
              <option value="">Credito</option>
            </select>
          </div>
        </div>
      </div>
      <div class="flexRow" style="align-items: center">
        <div class="cajaInput">
          <label for="lotePresentacion">Presentacion</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <select
              class="estiloInputLogin"
              name="lotePresentacion"
              id="lotePresentacion"
              style="width: 15vh"
              tabindex="6"
            >
              <option value="-1">Seleccione</option>
              <option value="Libra">Unidad</option>
              <option value="Saco">Saco</option>
              <option value="Libra">Libra</option>
              <option value="Caja">Caja</option>
              <option value="Frasco">Frasco</option>
              <option value="Botella">Botella</option>
              <option value="Bolsa">Bolsa</option>
              <option value="Lata">Lata</option>
              <option value="Jeringa">Jeringa</option>
              <option value="mL(Mililitros)">mL(Mililitros)</option>
              <option value="Tabletas">Tabletas</option>
              <option value="Otro">Otro</option>
            </select>
          </div>
        </div>
        <div class="cajaInput">
          <label for="productoFechaVencimiento">Fecha de Vencimiento</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              style="width: 15vh"
              type="date"
              name="productoFechaVencimiento"
              id="productoFechaVencimiento"
              class="estiloInputLogin"
              tabindex="7"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="loteValorUnitarioCompra">Valor Unitario de Compra</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              onkeyup="soloNumeros(this)"
              style="width: 15vh"
              type="text"
              name="loteValorUnitarioCompra"
              id="loteValorUnitarioCompra"
              class="estiloInputLogin"
              tabindex="8"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="loteValorUnitarioVenta">Valor Unitario de Venta</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              onkeyup="soloNumeros(this)"
              style="width: 15vh"
              type="text"
              name="loteValorUnitarioVenta"
              id="loteValorUnitarioVenta"
              class="estiloInputLogin"
              tabindex="9"
            />
          </div>
        </div>
        <div class="cajaInput">
          <label for="loteCantidad">Cantidad a Ingresar</label>
          <div class="imagenInput">
            <img src="icons/pencil.png" alt="" />
            <input
              onkeyup="soloNumeros(this)"
              style="width: 15vh"
              type="text"
              name="loteCantidad"
              id="loteCantidad"
              class="estiloInputLogin"
              tabindex="10"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="botonesDashboard">
      <div class="flexColumn space-around">
        <div class="flexColumn">
          <button
            onclick="limpiarTextos()"
            tabindex="-1"
            id="btnAceptar"
            class="boton colorAmarillo"
          >
            LIMPIAR
          </button>
        </div>
        <div class="flexColumn">
          <button
            onclick="validarNuevoProducto();event.preventDefault()"
            tabindex="11"
            id="btnAceptar"
            class="boton colorSecundario"
          >
            ACEPTAR
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="contenedorDashboard">
  <table class="estiloTabla">
    <thead>
      <tr>
        <th style="min-width: 20px; max-width: 20px; width: 20px">NÂº</th>
        <th style="min-width: 200px; max-width: 200px; width: 200px">
          Producto
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Presentacion
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Descripcion
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Fec.Vencimiento
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Categoria
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">Color</th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Proveedor
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          V.Unit Compra
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          V.Unit Venta
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Cantidad
        </th>
        <th style="min-width: 130px; max-width: 130px; width: 130px">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody id="tablaEntradas" style="max-height: 58vh; height: 58vh"></tbody>
  </table>
</div>
<div>
  <div class="flexRow" style="justify-content: space-evenly">
    <div class="flexRow">
      <button
        style="margin-right: 10px"
        tabindex="-1"
        id="btnLimpiar"
        class="boton colorAmarillo"
        onclick="location.reload()"
      >
        CANCELAR
      </button>
      <button
        onclick="nuevoProducto();event.preventDefault()"
        tabindex="-1"
        id="btnAceptar"
        class="boton colorSecundario"
      >
        ACEPTAR Y GUARDAR
      </button>
    </div>
  </div>
</div>
<script src="scripts/producto_nuevo.js"></script>
<%- include('./partials/footer.ejs') %>
